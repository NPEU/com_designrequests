<?xml version="1.0" encoding="UTF-8"?>
<form
    addrulepath="/administrator/components/com_designrequests/models/rules"
    addfieldpath="/administrator/components/com_designrequests/models/fields"
>
    <fieldset
        name="main"
        label="COM_DESIGNREQUESTS_FIELDSET_MAIN_LABEL"
    >
        <field
            name="id"
            type="hidden"
        />
        <field
            name="title"
            type="text"
            size="30"
            label="COM_DESIGNREQUESTS_TITLE_LABEL"
            description="COM_DESIGNREQUESTS_TITLE_DESC"
            filter="string"
            required="true"
            class=""
            labelclass=""
        />
        <field
            name="alias"
            type="text"
            size="30"
            label="COM_DESIGNREQUESTS_ALIAS_LABEL"
            description="COM_DESIGNREQUESTS_ALIAS_DESC"
            hint="COM_DESIGNREQUESTS_ALIAS_HINT"
            filter="string"
            class=""
            labelclass=""
        />
        <field name="state" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
    </fieldset>
</form>
